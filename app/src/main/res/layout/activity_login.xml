<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBackgroundColor"
    android:orientation="vertical" tools:context="vn.t3h.demoexam.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@color/toolbarBackgroundColor">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/ic_menu_share" android:id="@+id/imageView2" android:layout_weight="1" android:scaleType="center"/>
        <TextView
            android:text="Sign In"
            android:layout_width="match_parent"
            android:layout_height="70dp" android:id="@+id/textView2" android:layout_weight="1" android:textAlignment="viewStart" android:textSize="30sp" android:gravity="center_vertical" android:paddingLeft="30dp" android:textColor="@android:color/white"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="50dp" android:layout_marginTop="30dp" app:srcCompat="@drawable/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:background="@android:color/white">
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" android:hint="Username" android:inputType="textPersonName" android:paddingLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:background="@android:color/white">
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:ems="10" android:hint="Password" android:inputType="textPassword" android:paddingLeft="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:text="Sign in" android:selectAllOnFocus="false" android:background="@android:color/white"/>
    <Button
        android:id="@+id/btFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:background="@color/colorPrimaryDark" android:text="Sign up with Facebook" android:textColor="@android:color/white"/>
</LinearLayout>